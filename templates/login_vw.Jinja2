{% extends "app_login.Jinja2" %}
{% block content %}

    <div class="container">
        <div class="row">


            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Login</div>
                    <div class="text-center"> {% if session['fail'] %}
                        {{ session['fail'] }}
                    {% endif %}</div>
                    <div class="panel-body">
                        <form class="form-horizontal" method="POST" action="{{ url_for('webs.login') }}">

                            <div class="form-group">
                                <label for="email" class="col-md-4 control-label">E-Mail Address</label>
                                <div class="col-md-6">
                                    <input type="email" class="form-control" name="user" value="itplanet99@gmail.com"
                                           required autofocus>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password" class="col-md-4 control-label">Password</label>

                                <div class="col-md-6">
                                    <input id="password" type="password" class="form-control" name="password"
                                           value="sanju512" required>

                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <button type="submit" class="btn btn-primary">
                                        Login
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

